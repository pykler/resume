resume=hatem_nassrat
cover=$(resume)_cover_letter
TEX = latex
# UTILPATH=path/to/utils

all: $(resume).pdf $(cover).pdf

%_.% : %.%
	cp $< $@

%_.dvi : %_.tex
	rm -f $*_.aux $*_.out
	$(TEX) $*_
	if(grep -q "Citation" $*_.log) then \
	bibtex $*_; fi
	while ($(TEX) $*_ ; \
	grep -q "Rerun to get cross" $*_.log ) do true ; \
	done

%.pdf : %.ps
	if( echo `uname -a` | grep -i darwin >/dev/null) then \
	dvipdf $*; fi
	if( ! echo `uname -a` | grep -i darwin >/dev/null) then \
	ps2pdf $*.ps $*.pdf; fi

%.ps : %.dvi
	dvips $*

%.tar.gz : %.tex
	tar -czvf $@ *
	mkdir -p $*
	tar -xvf $@ -C $*/
	tar -czvf $@ $*/

%.html : %_.dvi
	cp $*_.aux $*_html.aux
	cp $*_.bbl $*_html.bbl
	cp $*_.toc $*_html.toc
# 	$(UTILPATH)/pre_tex_html.py <$*_.tex >$*_html.tex
# 	tth -w2 -y3 -u $*_html
# 	$(UTILPATH)/fix_html.py ext-rep.inc.html <$*_html.html >$*.html

clean:
	rm -f *_.*

distclean: clean
	rm -fr *.pdf *.ps *.dvi *.html *.tar.gz
